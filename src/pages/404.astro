---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center text-center py-3xl">
    <h1 class="text-display font-bold text-text-primary mb-md">404</h1>
    <p class="text-base text-text-secondary mb-xl max-w-[40ch]">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="px-8 py-3 bg-accent text-white rounded-base font-bold hover:bg-accent-dark transition-colors"
    >
      Back to Home
    </a>
  </div>
</BaseLayout>
